  <%= f.fields_for :purchase_details, @purchase_detail, child_index: @purchase_detail_index do |pd_f| %>
    <%= pd_f.fields_for :purchase_shorts, @purchase_detail.purchase_shorts.new, child_index: @purchase_short_index do |ps_f| %>
