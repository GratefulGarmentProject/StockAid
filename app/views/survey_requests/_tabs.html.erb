<div class="row">
  <div class="col-xs-6">
    <ul class="nav nav-pills">
      <%= tab("Overview", survey_request_path(@survey_request), params[:action] == "show") %>
      <%= tab("Report", report_survey_request_path(@survey_request), params[:action] == "report") %>
      <%= tab("Email", email_survey_request_path(@survey_request), params[:action] == "email") %>
    </ul>
  </div>

  <% if params[:action] == "report" %>
    <div class="col-xs-6">
      <div class="pull-right">
        <%= link_to "Export", export_survey_request_path(@survey_request), class: "btn btn-primary", data: { turbolinks: false } %>
      </div>
    </div>
  <% end %>
</div>

